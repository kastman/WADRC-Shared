<h1>Listing researchers</h1>

<table>
	<tfoot><tr><td colspan="7"><%= paginate @researchers %></td></tr></tfoot>
  <tr>
    <th><%= sort_link @search, :initials %></th>
    <th><%= sort_link @search, :first %></th>
    <th><%= sort_link @search, :last %></th>
		<th>Appointments</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @researchers.each do |researcher| %>
  <tr>
    <td><%= researcher.initials %></td>
    <td><%= researcher.first %></td>
    <td><%= researcher.last %></td>
		<td><%= researcher.appointments.count %></td>
    <td><%= link_to 'Show', researcher %></td>
    <td><%= link_to 'Edit', edit_researcher_path(researcher) %></td>
    <td><%= link_to 'Destroy', researcher, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

