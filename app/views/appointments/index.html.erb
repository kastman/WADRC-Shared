<h1>Listing appointments</h1>

<table>
	<tfoot><tr><td colspan="7"><%= paginate @appointments %></td></tr></tfoot>
  <tr>
    <th><%= sort_link @search, :visit_visit_number, "Visit" %></th>
    <th><%= sort_link @search, :appointment_date %></th>
    <th>Appointment comment</th>
    <th><%= sort_link @search, :researcher_initials, "Researcher" %></th>
		<th>Series</th>
		<th>Metainfos</th>
		<th>ScanLogs</th>
		<th>Agreement</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @appointments.each do |appointment| %>
  <tr>
    <td><%= appointment.visit_number unless appointment.visit.blank? %></td>
    <td><%= appointment.appointment_date %></td>
    <td><%= appointment.appointment_comment %></td>
    <td><%= link_to appointment.researcher_initials, appointment.researcher unless appointment.researcher.blank? %></td>
		<td><%= appointment.series.count %></td>
		<td><%= appointment.series_metainfos.count %></td>
		<td><%= appointment.series_log_items.count %></td>
		<td><%= display_agreement(appointment.total_series_description_agreement) unless appointment.total_series_description_agreement.blank?  %></td>
    <td><%= link_to 'Show', appointment %></td>
    <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
    <td><%= link_to 'Destroy', appointment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Appointment', new_appointment_path %>

<%= form_for @search do |f| %>
	<p>
		<%= f.label :appointment_date_eq %>
		<%= f.text_field :appointment_date_eq %>
	</p>
	<p>
		<%= f.label :mri_scan_study_rmr_like %>
		<%= f.text_field :mri_scan_study_rmr_like %>
	</p>
	<p class="button"><%= f.submit "Search" %></p>
<% end %>
