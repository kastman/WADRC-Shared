<p id="notice"><%= notice %></p>

<p>
  <b>Description:</b>
  <%= @functional_scenario.description %>
</p>

<p>
  <b>Functional set:</b>
  <%= link_to @functional_scenario.setname, @functional_scenario.functional_set %>
</p>

<p>
  <b>Intended reps:</b>
  <%= @functional_scenario.intended_reps %>
</p>

<p>
  <b>Scenario file:</b>
  <%= @functional_scenario.scenario_file %>
</p>

<p>
	<b><%= pluralize @functional_scenario.scan_tasks.count, "Scan Task" %>:</b><br/>
	<ul>
		<% @functional_scenario.scan_tasks.each do |task| %>
			<li><%= link_to task.series_order, task %>: <%= link_to task.appointment_date, task.appointment unless task.appointment.blank?  %></li>
		<% end %>
	</ul>
</p>

<%= link_to 'Edit', edit_functional_scenario_path(@functional_scenario) %> |
<%= link_to 'Back', functional_scenarios_path %>
