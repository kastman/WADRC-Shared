<!DOCTYPE html>
<html>
<head>
  <title>PandaShared</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="main">

<% flash.each do |key, value| -%>
	<div class="flash <%= key %>"><%= value %></div>
<% end -%>

<%= yield %>

<nav>
<ul>
	<li><%= link_to "Participants", participants_url %></li>
	<li><%= link_to "Enrollments", enrollments_url %></li>
	<li><%= link_to "Visits", visits_url %></li>
	<li><%= link_to "Appointments", appointments_url %></li>
	<li><%= link_to "Researchers", researchers_url %></li>
</ul>
</nav>

<% if signed_in? %>
  <%= current_user.email %>
  <%= link_to "Sign out", sign_out_path, :method => :delete %>
<% else %>
  <%= link_to "Sign in", sign_in_path %>
<% end %>

</div>
<img src="/images/pandamonium.jpg">
</body>
</html>
